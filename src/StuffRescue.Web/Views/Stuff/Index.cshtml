@model StuffRescue.Web.Models.StuffViewModels.ItemViewModel

@{
    ViewData["Title"] = "Add Stuff";
}

<h2>Add Stuff</h2>

<form asp-controller="stuff" asp-action="Index" enctype="multipart/form-data" >
    <div class="form-horizontal">
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Photos" class="col-md-2 control-label">Select Photo</label>
            <div class="col-md-10">
                <input asp-for="Photos" type="file" class="form-control inputfile" id="take-picture" >
                <label for="take-picture"><i class="glyphicon glyphicon-picture" style="color:#ccc"></i>  Choose a file</label>
                <span asp-validation-for="Photos" class="text-danger" />
            </div>
          </div>
        <div class="form-group">
            <label asp-for="Photos" class="col-md-2 control-label">Preview:</label>
            <div class="col-md-10">
                <img alt="Preview Image Here" class="js-show-picture img-thumbnail">
                <button class="js-close-preview" ng-show="fileLoaded" ng-click="hideDialog($event)"><i class="glyphicon glyphicon-remove"></i></button>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Make" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Make" class="form-control" />
                <span asp-validation-for="Make" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Category" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Category" class="form-control" />
                <span asp-validation-for="Category" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Condition" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Condition" class="form-control" />
                <span asp-validation-for="Condition" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Price" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <div class="checkbox">
                    <input asp-for="Negotiable" />
                    <label asp-for="Negotiable"></label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <div class="checkbox">
                    <input asp-for="Share" />
                    <label asp-for="Share"></label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <div class="checkbox">
                    <input asp-for="Location" />
                    <label asp-for="Location"></label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
